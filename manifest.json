{
  "manifest_version": 3,
  "name": "UVA Canvas Reskin MVP",
  "version": "0.1.0",
  "description": "Reskins key Canvas pages (dashboard, calendar, inbox, groups, and course pages) on UVA Canvas.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://canvas.its.virginia.edu/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://canvas.its.virginia.edu/*"
  ]
}
