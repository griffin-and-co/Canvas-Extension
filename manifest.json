{
  "manifest_version": 3,
  "name": "UVA Canvas Dashboard Reskin",
  "description": "Reskins the Canvas dashboard at canvas.its.virginia.edu to match a custom UVA-style layout.",
  "version": "1.0.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://canvas.its.virginia.edu/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
